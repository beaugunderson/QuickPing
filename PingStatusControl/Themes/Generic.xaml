<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:QuickPingControls="clr-namespace:QuickPingControls">
    <Style TargetType="{x:Type QuickPingControls:PingStatusControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type QuickPingControls:PingStatusControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <TextBlock Height="32" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="AddressTextBlock" Text="{TemplateBinding Address}" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Consolas" Foreground="White" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>